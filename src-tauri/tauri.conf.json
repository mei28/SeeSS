{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SeeSS",
  "version": "0.1.0",
  "identifier": "com.seess.app",
  "build": {
    "frontendDist": "../web/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": { "script": "pnpm dev", "cwd": "../web" },
    "beforeBuildCommand": { "script": "pnpm build", "cwd": "../web" }
  },
  "app": {
    "windows": [
      {
        "title": "SeeSS",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
